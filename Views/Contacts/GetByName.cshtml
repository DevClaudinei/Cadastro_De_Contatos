@model IEnumerable<Contact>

@{
    ViewData["Title"] = "GetByName";
}

<h1>Get Contact By Name</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonalPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CommercialPhone)
            </th>
            <th>
                E-mails
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Company)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PersonalPhone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CommercialPhone)
                </td>
                <td>
                    @if (item.Emails.Any())
                    {
                        <ul>
                            @foreach (var email in item.Emails)
                            {
                                <li>@email.Address</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p>Nenhum e-mail</p>
                    }
                </td>
                <td>
                    <a asp-action="Index" class="btn btn-info btn-sm" asp-route-id="@item.Id">Home</a>
                    <a asp-action="Details" class="btn btn-primary btn-sm" asp-route-id="@item.Id">Details</a>
                    <a asp-action="Edit" class="btn btn-warning btn-sm" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Delete" class="btn btn-danger btn-sm" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>